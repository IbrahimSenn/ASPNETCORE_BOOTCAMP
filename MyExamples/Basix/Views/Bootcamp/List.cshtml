@model List<Bootcamp>;
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Document</title>
    </head>
    <body>
        @foreach(var kurs in @Model){
           <div id = "kurs_@kurs.Id">
            <h2>@kurs.Name</h2>
            <img src="~/img/@kurs.Image" width="250px" alt="">
            <p>@kurs.Description</p>
           </div>
           <hr> 
            
        }
    </body>
    </html>