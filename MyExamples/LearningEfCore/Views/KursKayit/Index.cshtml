 @model IEnumerable<KursKayit> 
     @* Liste olarak çekilden verileri bu şekilde çekmeyi unutma.  *@

<h2> Öğrenci Listesi </h2>

<table class="table table-bordered">

    <thead>
        <tr>

            <th style="width: 150px;"> @Html.DisplayNameFor(m => m.KayitId)</th>
            <th style="width: 150px;"> @Html.DisplayNameFor(m => m.Ogrenci.AdSoyad)</th>
            <th style="width: 150px;"> @Html.DisplayNameFor(m => m.Kurs.KursAdi) </th>
            <th style="width: 150px;"> Ayarlar </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model){
            <tr>
                <td> @Html.DisplayFor(modelItem => item.KayitId) </td>
                <td> @Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad) </td>
                <td> @Html.DisplayFor(modelItem => item.Kurs.KursAdi) </td>
                <td>
                    <a asp-controller="Edit" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-primary"> Edit </a>
                    <a asp-controller="Delete" asp-route-id="@item.OgrenciId" class="btn btn-sm btn-danger"> Delete </a>
                </td>

                
            </tr>
        }
    </tbody>

</table>