@model KursKayit

<h2>Kurs Kayıt Ekleme</h2>
<hr>

 <form asp-asp-controller="KursKayit" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="KursId" class="form-label">Kurs Başlığı : </label>
        <select asp-for="KursId" asp-items="ViewBag.Kurslar" class="form-control">
            @* ViewBag Controller ile View arasında geçici veri taşıma işlemi yapar. Veri türü gözetmez dolayısıyla hata fırlatma konusunda güvensizdir. *@
            <option value=""> Seçiniz </option>
        </select>
    </div>
    <div class="mb-3">
        <label asp-for="OgrenciId" class="form-label"> Öğrenci Adı : </label>
        <select asp-for="OgrenciId" asp-items="ViewBag.Ogrenciler" class="form-control">
            <option value=""> Seçiniz </option>
        </select>
        
        
    </div>
    
    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form> 