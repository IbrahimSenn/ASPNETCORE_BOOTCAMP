@model Ogrenci

<h2>Öğrenci Güncelleme</h2>
<hr>

<div class="row">
    <div class="col-8">
        <form asp-asp-controller="Ogrenci" asp-action="Edit" method="post">

   <input type="hidden" asp-for="OgrenciId">  @* Edit sayfanının gelmesi için gerekli olan id bilgisini buradan çektik. *@


    <div class="mb-3">
        <label asp-for="OgrenciAd" class="form-label">Öğrenci Ad</label>
        <input asp-for="OgrenciAd" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="OgrenciSoyad" class="form-label">Öğrenci Soyad</label>
        <input asp-for="OgrenciSoyad" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Eposta" class="form-label">Öğrenci E-posta</label>
        <input asp-for="Eposta" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="Telefon" class="form-label">Öğrenci Telefon</label>
        <input asp-for="Telefon" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary"> Kaydet </button>
</form>
    </div>
    <div class="col-4">
        <h2>Kayıtlı olduğu kurslar</h2>
        <hr>

        <ul>
            @foreach(var item in @Model.KursKayitlari){

                <li> @item.Kurs.KursAdi</li>

        }
        </ul>
        


        


        
    </div>

</div>

