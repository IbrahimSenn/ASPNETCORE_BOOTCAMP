 @Model Bootcamp
<div class="card mb-3" id="kurs_@Model.Id">
                    <div class="row">
                        <div class="col-md-4">
                             <img src="~/img/@Model.Image"  alt="" class="img-fluid rounded">
                        </div>
                        <div class="col-md-8 mt-4">
                            
                              <a asp-controller="Bootcamp" asp-action="Details" asp-route-id="@Model.Id"> 

                              <h5> @Model.Title </h5>
                              </a>
                                <p> @Model.Description </p> 
                        <div>
                          @if(Model.Tags != null)
                          {
                            @foreach(var tag in Model.Tags)
                            {
                              <span class="badge bg-primary"> @tag </span>
                            }
                          }

                        </div>
                        </div>
                    </div>
</div>